        <h2 class="title">${pdict.heroTitle}</h2>
        <isif condition="${pdict.heroCTALink && pdict.heroCTAText}">
          <a class="cta-button btn btn-primary" href="${pdict.heroCTALink}">${pdict.heroCTAText}</a>
        </isif>
      </div>
    </div>
  </div>
</div>